<div id="overlay" style="display: none;" class="position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50">
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>


<div class="modal fade" id="ShowGroupChoices" tabindex="-1" role="dialog" aria-labelledby="ShowGroupChoicesLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ShowGroupChoicesLabel">Which group could help you the most now?</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id = "GroupButtons">
                <ul>       
                    <li><button class="btn btn-primary" onclick="ConfirmGroupChat('Anxiety')" data-bs-dismiss="modal">Anxiety Group</button></li>
                    <li><button class="btn btn-primary" onclick="ConfirmGroupChat('Depression')" data-bs-dismiss="modal">Depression Group</button></li>
                    <li><button class="btn btn-primary" onclick="ConfirmGroupChat('Stress')" data-bs-dismiss="modal">Stress Group</button></li>
                    <li><button class="btn btn-primary" onclick="ConfirmGroupChat('Grief')" data-bs-dismiss="modal">Grief Group</button></li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="confirmJoinGroup" tabindex="-1" role="dialog" aria-labelledby="confirmJoinGroupLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmJoinGroupLabel">Confirm Group Join</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to join the <span id="selectedGroup">group</span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="JoinGroupConfirm" data-bs-dismiss="modal">Join Group</button>
            </div>
        </div>
    </div>
</div>
